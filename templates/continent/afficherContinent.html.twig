{% extends 'base.html.twig' %}

{% block title %}Continents{% endblock %}
{% block monTitre %}Continent : {{continent.libelle}}{% endblock %}


{% block body %}
      <div class="row">
    {% for animal in continent.animaux %}
        <div class="col-6   ">
            <div class= "row align-items-center">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img class= "p-2 m-2 img-fluid" src={{ asset('images/' ~ animal.image) }}>
                </div>
                <div class="col text-center">
                    <h2><a href="{{path('afficher_animal',{'id': animal.id})}}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                <div><a href="{{ path('afficher_famille', {'id' : animal.famille.id})}}" class = "btn btn-primary">{{animal.famille.libelle}}</a></div>
                </div>
                <div>{% for continentAnimal in animal.continents %}
                <div>
                        {% if continentAnimal.id != continent.id  %}
                      <div class="col-12 col-md-3 col-lg-4"><a href={{ path('afficher_continent', {'id': continentAnimal.id}) }} class= "btn btn-warning mt-1">{{continentAnimal.libelle}}</a></div>
                        {% endif %}
                </div>
                    {% endfor %}</div>
            </div>
        </div>
    {% endfor %}
  </div>

{% endblock %}
