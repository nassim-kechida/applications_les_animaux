{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}
{% block monTitre %}Famille {{famille.libelle}} {% endblock %}
{% block body %}
    <div class="text-info">{{famille.description}}</div>
    <div class="row">
    {% for animal in famille.animaux %}
        <div class="col-4   ">
            <div class= "row align-items-center ">
                <div class="col-12 col-md-6 col-lg-2 text-center ">
                    <img class= "p-2 m-2" src={{ asset('images/' ~ animal.image) }}>
                </div>
                <div class="col text-center">
                    <h2><a href="{{path('afficher_animal',{'id': animal.id})}}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                <div><a href="" class = "btn btn-primary">{{animal.famille.libelle}}</a></div>
                    {% for continent in animal.continents %}
                      <div class="mx-auto"><a href={{ path('afficher_continent', {'id': continent.id}) }} class= "btn btn-warning mt-1">{{continent.libelle}}</a></div>
                
                    {% endfor %}
                
                </div>
            </div>
        </div>
  </div>
{% endfor %}
{% endblock %}
