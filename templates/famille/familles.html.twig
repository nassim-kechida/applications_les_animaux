{% extends 'base.html.twig' %}

{% block title %}Familles{% endblock %}
{% block monTitre %}Page listant les familles {% endblock %}
{% block body %}
    {% for famille in familles %}
    
    <h2 class = "border-bottom border-primary text-primary"><a href={{ path('afficher_famille', {'id':famille.id})}}>{{famille.libelle|capitalize}}</a></h2>
    <div class="text-info">{{famille.description}}</div>
    <div class="row">
    {% for animal in famille.animaux %}
        <div class="col-6   ">
            <div class= "row align-items-center">
                <div class="col-12 col-md-6 col-lg-2 text-center">
                    <img class= "p-2 m-2 img-fluid" src={{ asset('images/' ~ animal.image) }}>
                </div>
                <div class="col text-center">
                    <h2><a href="{{path('afficher_animal',{'id': animal.id})}}">{{ animal.nom }}</a></h2>
                    <div>{{ animal.description }}</div>
                    {% for continent in animal.continents %}
                       <a href={{ path('afficher_continent', {'id': continent.id}) }} class= "btn btn-warning mt-1">{{continent.libelle}}</a> 
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endfor %}
  </div>
{% endfor %}
{% endblock %}
