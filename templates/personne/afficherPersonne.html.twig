{% extends 'base.html.twig' %}

{% block title %}Personne{% endblock %}
{% block monTitre %}{{personne.nom }}{% endblock %}

{% block body %}
        <h3>Liste des animaux possédés : </h3>
        {% for dispose in personne.disposes %}
            <div class="row align-items-center m-1">
                <div class="col-2">
                    <img src="{{ asset('images/' ~ dispose.animal.image )}}">
            </div>
            <div class="col">
                <h2><a href="{{ path('afficher_personne',{'id': dispose.personne.id})}}">{{ dispose.animal.nom }}</a></h2>
                <div>Nombre : {{dispose.nb}}</div>
            </div>
            </div>
        {% endfor %}
{% endblock %}
